{
	"name": "vdmsl",
	"displayName": "vdmsl",
	"description": "Language Support for VDM-SL",
	"author": "Jonas Rask and Frederik Palludan",
    "license": "MIT",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [],
	"activationEvents": [
		"onLanguage:vdmsl"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [{
			"id": "vdmsl",
			"aliases": ["VDM-SL", "vdmsl"],
			"extensions": [".vdmsl"],
			"configuration": "./language-configuration.json"
		}],
		"grammars": [{
			"language": "vdmsl",
			"scopeName": "source.vdmsl",
			"path": "./syntaxes/vdmsl.tmGrammar.json"
		}]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.49.0",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	}
}
