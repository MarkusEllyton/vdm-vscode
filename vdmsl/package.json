{
  "name": "vdmsl-lsp",
  "description": "A language server for VDM-SL",
  "author": "Jonas Rask and Frederik Palludan",
  "license": "MIT",
  "version": "0.0.2",
  "repository": {
		"type": "git",
		"url": "https://github.com/jonaskrask/vdm-vscode"
	},
  "publisher": "vscode",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vdmsl"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands":[
      {
        "command": "extension.runPOG",
        "title": "POG: Run Proof Obligation Generation (POG)"
      },
      {
        "command": "extension.retrievePOs",
        "title": "POG: Retrieve Proof Obligations"
      }
    ],
    "menus": {
      "commandPalette": [{
        "command": "extension.runPOG",
        "when": "editorLangId == vdmsl"
      }],
      "explorer/context": [{
        "when": "resourceLangId == vdmsl || explorerResourceIsFolder",
        "command": "extension.runPOG",
        "group": "verification@1"
      }]
    },
    "configuration":{
      "title": "Extension configuration",
      "type":"object",
      "properties": {
        "vdmsl-lsp.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
          ],
          "format": "json",
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
      }
    },
    "languages": [
      {
        "id": "vdmsl",
        "aliases": [
          "VDM-SL",
          "vdmsl"
        ],
        "extensions": [
          ".vdmsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vdmsl",
        "scopeName": "source.vdmpp",
        "path": "./syntaxes/vdmpp.tmLanguage.json"
      },
      {
        "scopeName": "source.vdmpp.number",
        "path": "./syntaxes/number.tmLanguage.json"
      }
    ],
    "debuggers": [
      {
        "type": "vdm",
        "label": "VDM Debug",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {
              "noDebug": {
                "type": "boolean",
                "description": "Don't run debug mode.",
                "default": false
              },
              "defaultName": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "Name of the default module or class.",
                "default": ""
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "vdm",
            "request": "launch",
            "name": "Launch VDM Debug",
            "stopOnEntry": true,
            "noDebug": false,
            "defaultName": null
          }
        ],
        "configurationSnippets": [
          {
            "label": "VDM Debug: Launch",
            "description": "A new configuration for 'debugging' a VDM project.",
            "body": {
              "type": "vdm",
              "request": "launch",
              "name": "Launch VDM Debug",
              "stopOnEntry": true,
              "noDebug": false,
              "defaultName": null
            }
          }
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "VDM_SL"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@types/vscode": "1.43.0",
    "@types/mocha": "^8.0.3",
    "mocha": "^8.1.1",
    "vscode-test": "^1.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "portfinder": "^1.0.26",
    "vscode-languageclient": "^6.1.3"
  }
}
