{
  "name": "vdmsl-lsp",
  "description": "A language server for VDM-SL",
  "author": "Jonas Rask and Frederik Palludan",
  "license": "MIT",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonaskrask/vdm-vscode"
  },
  "publisher": "vscode",
  "engines": {
    "vscode": "^1.49.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vdmsl"
  ],
  "main": "./dist/extension",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "ctView",
        "contents": "[Generate test outline](command:extension.getCTOutline)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "combinatorialTesting",
          "title": "Combinatorial Testing",
          "icon": "media/book.svg"
        }
      ]
    },
    "views": {
      "combinatorialTesting": [
        {
          "id": "ctView",
          "name": "Combinatorial test view",
          "when": "vdm-ct-show-view == true"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.runPOG",
        "title": "Run Proof Obligation Generation",
        "category": "VDM",
        "icon": "$(run)"
      },
      {
        "command":  "extension.getCTOutline",
        "title": "Generatesthe outline for combinatorial tests for the project",
        "category": "VDM",
        "icon": "$(refresh)"
      },
      {
        "command":  "extension.generateCTsForTrace",
        "title": "Generate Tests",
        "category": "VDM",
        "icon": "$(refresh)"
      },
      {
        "command":  "extension.executeTrace",
        "title": "Execute Trace",
        "category": "VDM",
        "icon": "$(run-all)"
      },
      {
        "command":  "extension.fullCTexecution",
        "title": "Full Evaluation",
        "category": "VDM",
        "icon": "$(run)"
      },
      {
        "command":  "extension.filteredCTexecution",
        "title": "Filtered Evaluation",
        "category": "VDM",
        "icon": "$(filter)"
      },
      {
        "command": "extension.filterPassedCTs",
        "title": "Filter passed CTs",
        "category": "VDM",
        "icon": "$(filter)"
      },
      {
        "command": "extension.filterInconclusiveCTs",
        "title": "Filter inconclusive CTs",
        "category": "VDM"
      },
      {
        "command": "extension.saveCT",
        "title": "Save Combinatorial Tests",
        "category": "VDM"
      },
      {
        "command": "extension.loadCT",
        "title": "Load Combinatorial Tests",
        "category": "VDM"
      },
      {
        "command": "extension.setCTFilter",
        "title": "Set Combinatorial Test Filter",
        "category": "VDM",
        "icon": "$(gear)"
      },
      {
        "command": "extension.sendToInterpreter",
        "title": "Send test to interpreter",
        "category": "VDM",
        "icon": "$(debug-alt)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.runPOG",
          "when": "editorLangId == vdmsl"
        },
        {
          "command": "extension.getCTOutline",
          "when": "editorLangId == vdmsl"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == vdmsl",
          "command": "extension.runPOG",
          "group": "verification@1"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == vdmsl",
          "command": "extension.runPOG",
          "group": "verification@1"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.fullCTexecution",
          "when": "viewItem == trace",
          "group": "ctView@0"
        },
        {
          "command": "extension.filteredCTexecution",
          "when": "viewItem == trace",
          "group": "ctView@1"
        },
        {
          "command": "extension.generateCTsForTrace",
          "when": "viewItem == trace",
          "group": "ctView@2"
        },
        {
          "command": "extension.sendToInterpreter",
          "when": "viewItem == test",
          "group": "ctView@0"
        },
        {
          "command": "extension.fullCTexecution",
          "when": "viewItem == trace",
          "group": "inline@0"
        },
        {
          "command": "extension.filteredCTexecution",
          "when": "viewItem == trace",
          "group": "inline@1"
        },
        {
          "command": "extension.generateCTsForTrace",
          "when": "viewItem == trace",
          "group": "inline@2"
        },
        {
          "command": "extension.sendToInterpreter",
          "when": "viewItem == test",
          "group": "inline@0"
        }
      ],
      "view/title": [
        {
          "command": "extension.setCTFilter",
          "when": "view =~ /combinatorialTests/ && vdm-ct-show-set-execute-filter-button == true",
          "group": "navigation@1"
        },
        {
          "command": "extension.filterPassedCTs",
          "when": "view =~ /combinatorialTests/ && vdm-ct-show-filter-button == true"
        },
        {
          "command": "extension.filterInconclusiveCTs",
          "when": "view =~ /combinatorialTests/ && vdm-ct-show-filter-button == true"
        }
        
      ]
    },
    "configuration": {
      "title": "VDM-SL",
      "properties": {
        "vdmsl-lsp.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "format": "json",
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        },
        "vdmsl-lsp.JVMArguments": {
          "type": "string",
          "default": "-Xmx2g",
          "description": "JVM arguments used when launching the server."
        },
        "vdmsl-lsp.experimentalServer": {
          "type": "boolean",
          "default": false,
          "description": "Using experimental server. True if running client should not launch server."
        },
        "vdmsl-lsp.lspPort": {
          "type": "integer",
          "default": 8000,
          "description": "Default port for LSP client. Only used for debug server."
        },
        "vdmsl-lsp.dapPort": {
          "type": "integer",
          "default": 8001,
          "description": "Default port for DAP client. Only used for debug server."
        }
      }
    },
    "languages": [
      {
        "id": "vdmsl",
        "aliases": [
          "VDM-SL",
          "vdmsl"
        ],
        "extensions": [
          ".vdmsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vdmsl",
        "scopeName": "source.vdmpp",
        "path": "./syntaxes/vdmpp.tmLanguage.json"
      },
      {
        "scopeName": "source.vdmpp.number",
        "path": "./syntaxes/number.tmLanguage.json"
      }
    ],
    "debuggers": [
      {
        "type": "vdmsl",
        "label": "VDM-SL Debug",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {
              "noDebug": {
                "type": "boolean",
                "description": "Don't run debug mode.",
                "default": false
              },
              "defaultName": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "Name of the default module or class.",
                "default": ""
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "vdmsl",
            "request": "launch",
            "name": "Launch VDM-SL Debug",
            "stopOnEntry": true,
            "noDebug": false,
            "defaultName": null
          }
        ],
        "configurationSnippets": [
          {
            "label": "VDM-SL Debug: Launch",
            "description": "A new configuration for 'debugging' a VDM-SL project.",
            "body": {
              "type": "vdmsl",
              "request": "launch",
              "name": "Launch VDM-SL Debug",
              "stopOnEntry": true,
              "noDebug": false,
              "defaultName": null
            }
          }
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "vdmsl"
      }
    ]
  },
  "scripts": {
    "preinstall": "cd ../common && npm install && cd ../vdmsl",
    "postinstall": "node copyScript.js",
    "vscode:prepublish": "npm run compile && webpack --mode production",
    "compile": "node copyScript.js && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "webpack": "npm run compile && webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.2",
    "@types/vscode": "^1.49.0",
    "mocha": "^8.1.1",
    "ts-loader": "^8.0.6",
    "typescript": "^4.0.2",
    "vscode-test": "^1.3.0",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.1.0"
  },
  "dependencies": {
    "compile": "0.0.2",
    "fs-extra": "^9.0.1",
    "portfinder": "^1.0.26",
    "run": "^1.4.0",
    "vscode-languageclient": "^6.1.3"
  }
}
