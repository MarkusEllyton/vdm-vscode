{
  "name": "vdmrt-lsp",
  "description": "A language server for VDM-RT",
  "author": "Jonas Rask and Frederik Palludan",
  "license": "MIT",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonaskrask/vdm-vscode"
  },
  "publisher": "vscode",
  "engines": {
    "vscode": "^1.49.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vdmrt"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.runPOG",
        "title": "Run Proof Obligation Generation"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.runPOG",
          "when": "editorLangId == vdmrt"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == vdmrt",
          "command": "extension.runPOG",
          "group": "verification@1"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == vdmrt",
          "command": "extension.runPOG",
          "group": "verification@1"
        }
      ]
    },
    "configuration": {
      "title": "VDM-RT",
      "properties": {
        "vdmrt-lsp.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "format": "json",
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        },
        "vdmrt-lsp.JVMArguments": {
          "type": "string",
          "default": "",
          "description": "JVM arguments used when launching the server."
        },
        "vdmrt-lsp.experimentalServer": {
          "type": "boolean",
          "default": false,
          "description": "Using experimental server. True if running client should not launch server."
        },
        "vdmrt-lsp.lspPort": {
          "type": "integer",
          "default": 8000,
          "description": "Default port for LSP client. Only used for debug server."
        },
        "vdmrt-lsp.dapPort": {
          "type": "integer",
          "default": 8001,
          "description": "Default port for DAP client. Only used for debug server."
        }
      }
    },
    "languages": [
      {
        "id": "vdmrt",
        "aliases": [
          "VDM-RT",
          "vdmrt"
        ],
        "extensions": [
          ".vdmrt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vdmrt",
        "scopeName": "source.vdmpp",
        "path": "./syntaxes/vdmpp.tmLanguage.json"
      },
      {
        "scopeName": "source.vdmpp.number",
        "path": "./syntaxes/number.tmLanguage.json"
      }
    ],
    "debuggers": [
      {
        "type": "vdmrt",
        "label": "VDM-RT Debug",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {
              "noDebug": {
                "type": "boolean",
                "description": "Don't run debug mode.",
                "default": false
              },
              "defaultName": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "Name of the default module or class.",
                "default": ""
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "vdmrt",
            "request": "launch",
            "name": "Launch VDM-RT Debug",
            "stopOnEntry": true,
            "noDebug": false,
            "defaultName": null
          }
        ],
        "configurationSnippets": [
          {
            "label": "VDM-RT Debug: Launch",
            "description": "A new configuration for 'debugging' a VDM-RT project.",
            "body": {
              "type": "vdmrt",
              "request": "launch",
              "name": "Launch VDM-RT Debug",
              "stopOnEntry": true,
              "noDebug": false,
              "defaultName": null
            }
          }
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "vdmrt"
      }
    ]
  },
  "scripts": {
    "preinstall": "cd ../common && npm install && cd ../vdmrt",
    "postinstall": "cd ../common && node copyScript.js vdmrt",
    "vscode:prepublish": "npm run compile && webpack --mode production",
    "compile": "cd ../common && node copyScript.js vdmrt && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.2",
    "@types/vscode": "^1.49.0",
    "mocha": "^8.1.1",
    "ts-loader": "^8.0.6",
    "typescript": "^4.0.2",
    "vscode-test": "^1.3.0",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0"
  },
  "dependencies": {
    "fs-extra": "^9.0.1",
    "compile": "0.0.2",
    "portfinder": "^1.0.26",
    "run": "^1.4.0",
    "vscode-languageclient": "^6.1.3"
  }
}
